<div class="container">
    <div class="row">
        <div class="col s3">
            <h1><a href="/" class="brand-logo">Avalie.me</a></h1>
        </div>
        <div class="col s9">
            <div class="row">
                <div class="col s11">
                  <input placeholder="Buscar" id="buscar" type="text" class="validate">
                </div>
                <div class="col s1" style="margin-top:1rem">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        <i class="material-icons">search</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- TODO: trocar para dropdown (https://materializecss.com/dropdown.html) -->
<nav class="white">
    <div class="container">
        <ul class="collapsible">
        <% Category.all.each do |category| %>
          <% if category.parent_id.blank? %>
            <li>
              <div class="collapsible-header" style="color: #333"><%= category.name %></div>
              <div class="collapsible-body">
                <div class="collection">
                  <% category.subcategories.each do |subcategory| %>
                    <%= link_to subcategory.name, subcategory, :class => "collection-item" %>
                  <% end %>
              </div>
              </div>
            </li>
          <% end %>
        <% end %>
        </ul>
    </div>
</nav>