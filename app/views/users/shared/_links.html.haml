%p
.divider
.section
  - if controller_name != 'sessions'
    = link_to t('Já sou cadastrado'), new_session_path(resource_name)
    |
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t('Cadastrar'), new_registration_path(resource_name)
    |
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to t('Esqueceu sua senha?'), new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to t("Não recebeu sua confirmação?"), new_confirmation_path(resource_name)
    |
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to t("Não recebeu suas instruções de desbloqueio?"), new_unlock_path(resource_name)
    |
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to t("Entrar com #{provider.to_s.titleize}"), omniauth_authorize_path(resource_name, provider)
      %br/
