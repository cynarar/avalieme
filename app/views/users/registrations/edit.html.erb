<div style = "width: 500px">
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h4> Minha conta </h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, multipart: true) do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <%= image_tag(current_user.avatar.url(:thumb)) %>
          <br/>
          <%= f.file_field :avatar %>
        </div>  
        <br/>
        <div class="form-group">
          <%= f.label "Nome" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :cpf %>
          <%= f.text_field :cpf, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "Endereço" %>
          <%= f.text_field :address, class: 'form-control' %>
          <%= f.check_box :showaddress, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "Cidade" %>
          <%= f.collection_select(:city_id, City.all, :id, :name, include_blank: true, class: 'browser-default') %>
        </div>
        <div class="form-group">
          <%= f.label "Senha atual" %>
          <i>
            (#{t('.we_need_your_current_password_to_confirm_your_changes', default: 'Precisamos da senha atual para confirmação')})
          </i>
          <%= f.password_field :current_password, class: 'form-control' %>
          
          <fieldset>
            <legend>Deixe em branco se não quiser alterar</legend>
            <div class="form-group">
            <%= f.label "Nova senha" %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label "Confirmar nova senha" %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </fieldset>
        </div>
        <br/>
        <%= f.submit 'Atualizar', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <p>
    <%= t('.unhappy', default: 'Insatisfeito') %>
    <%= link_to t('.cancel_my_account', default: 'Deletar minha conta'), registration_path(resource_name), data: { confirm: t('.are_you_sure', default: "Are you sure?") }, method: :delete %>.
  </p>
  <%= link_to t('.back', default: 'Voltar'), :back %>
</div>